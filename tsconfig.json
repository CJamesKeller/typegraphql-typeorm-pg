{
   "compilerOptions": {
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "src",
      "sourceMap": true,
      "target": "es2021",
      "moduleResolution": "node",
      "resolveJsonModule": true
   },
   "exclude": [
      "node_modules"
   ],
   "include": [
      "src/**/*.ts"
   ]
}
